<Window x:Class="SirusLauncher.Accaunt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SirusLauncher"
        mc:Ignorable="d"
        Title="Accaunt" Height="350" Width="570">
    <Grid>
        <Image Source="bg_reg.png" Stretch="Fill" />
        <Image Source="ram_reg.png" Stretch="Fill" Margin="-17,-42,-18,-14" />

        <TextBlock Text="Авторизация" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="184,16,168,0" Foreground="White" Height="22" Width="210" TextAlignment="Center"/>

        <Label Content="Введите логин:" VerticalAlignment="Top" Margin="66,37,51,0" Foreground="White"/>
        <TextBox x:Name="loginTextBox" VerticalAlignment="Top" Margin="66,68,51,0" Height="38"/>
        <Label Content="Введите пароль:" VerticalAlignment="Top" Margin="66,122,51,0" Foreground="White"/>
        <PasswordBox x:Name="passwordBox" VerticalAlignment="Top" Margin="66,153,51,0" Height="38" />
        <Button x:Name="LogIn" Content="Войти" Width="105" Height="36" Click="LoginButton_Click" Foreground="White" Background="#FF89552D" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="235,213,222,70" />

        <TextBlock Text="Создать аккаунт" FontSize="12" Foreground="White" TextDecorations="Underline" MouseDown="TextBlock_MouseDown" Cursor="Hand" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="209,265,193,36" Height="18" Width="160" TextAlignment="Center"/>

    </Grid>
</Window>
