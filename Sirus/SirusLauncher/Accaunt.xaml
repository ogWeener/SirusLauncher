<Window x:Class="SirusLauncher.Accaunt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SirusLauncher"
        mc:Ignorable="d"
        Title="Accaunt" Height="350" Width="570">
    <Grid>
        <Image Source="bg_reg.png" Stretch="Fill" />
        <Image Source="ram_reg.png" Stretch="Fill" Margin="-17,-42,-18,-14" />

        <TextBlock Text="Авторизация" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="163,16,189,0" Foreground="White" Height="22" Width="210" TextAlignment="Center"/>

        <TextBox x:Name="InputLoginTextBox" Width="445" Height="38" Margin="42,54,75,227" VerticalAlignment="Center" HorizontalAlignment="Center" GotFocus="InputTextBox_GotFocus" LostFocus="InputTextBox_LostFocus"/>
        <TextBlock x:Name="PlaceholderLTextBlock" Text="Логин" Foreground="Gray" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="49,62,0,227" IsHitTestVisible="False" Opacity="0.5" Height="30" Width="438"/>
        <TextBox x:Name="InputPassWTextBox" Width="445" Height="38" Margin="42,127,75,154" VerticalAlignment="Center" HorizontalAlignment="Center" GotFocus="InputTextBox_GotFocus" LostFocus="InputTextBox_LostFocus"/>
        <TextBlock x:Name="PlaceholderPTextBlock" Text="Пороль" Foreground="Gray" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="49,136,0,154" IsHitTestVisible="False" Opacity="0.5" Height="29" Width="438"/>
        <Button x:Name="LogIn" Content="Войти" Width="105" Height="36" Click="SubmitButton_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="212,192,245,91" />

        <TextBlock Text="Создать аккаунт" FontSize="12" Foreground="White" TextDecorations="Underline" MouseDown="TextBlock_MouseDown" Cursor="Hand" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="182,264,220,37" Height="18" Width="160" TextAlignment="Center"/>

    </Grid>
</Window>
